mixin btn(btnClass)
    - btnClass = btnClass || 'btn-primary'
    button.btn(type='button', class=btnClass)
        block

mixin btn-secondary(btnClass)
    - btnClass = 'btn-secondary '+btnClass || 'btn-secondary'
    +btn(btnClass)
        block
mixin btn-primary(btnClass)
    - btnClass = 'btn-primary '+btnClass || 'btn-primary'
    +btn(btnClass)
        block

mixin navbar(eleClass)
    - eleClass = eleClass || 'navbar-dark bg-dark'
    nav.navbar.navbar-expand-lg(class=eleClass)
        block

mixin nav-list()
    - navid = "navbar-"+Math.round(Math.random()*100000)
    button.navbar-toggler(type='button', data-toggle='collapse', data-target='#'+navid, aria-controls=navid, aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
    .collapse.navbar-collapse(id=navid)
        ul.navbar-nav.mr-auto
            block

mixin nav-brand(url)
    - url = url || '#'
    a.navbar-brand(href=url)
        block

mixin nav-item(url, label, eleClass)
    - url = url || '#'
    - eleClass = eleClass || ''
    - label = label || 'Item'
        li.nav-item(class=eleClass)
            a.nav-link(href=url)= label
